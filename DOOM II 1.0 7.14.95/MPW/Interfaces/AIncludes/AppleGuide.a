$00000010kAGDBTypeBitOther				EQU		$00000080; Returned by AGGetStatuskAGIsNotRunning					EQU		0kAGIsSleeping					EQU		1kAGIsActive						EQU		2; Returned by AGGetFrontWindowKindkAGNoWindow						EQU		0kAGAccessWindow					EQU		1kAGPresentationWindow			EQU		2; Error Codes; Not an enum, because other OSErrs are valid.; Apple Guide error codes; -------------------- Apple event reply codeskAGErrUnknownEvent				EQU		-2900kAGErrCantStartup				EQU		-2901kAGErrNoAccWin					EQU		-2902kAGErrNoPreWin					EQU		-2903kAGErrNoSequence				EQU		-2904kAGErrNotOopsSequence			EQU		-2905kAGErrReserved06				EQU		-2906kAGErrNoPanel					EQU		-2907kAGErrContentNotFound			EQU		-2908kAGErrMissingString				EQU		-2909kAGErrInfoNotAvail				EQU		-2910kAGErrEventNotAvailable			EQU		-2911kAGErrCannotMakeCoach			EQU		-2912kAGErrSessionIDsNotMatch		EQU		-2913kAGErrMissingDatabaseSpec		EQU		-2914; -------------------- Coach's Chalkboard reply codeskAGErrItemNotFound				EQU		-2925kAGErrBalloonResourceNotFound	EQU		-2926kAGErrChalkResourceNotFound		EQU		-2927kAGErrChdvResourceNotFound		EQU		-2928kAGErrAlreadyShowing			EQU		-2929kAGErrBalloonResourceSkip		EQU		-2930kAGErrItemNotVisible			EQU		-2931kAGErrReserved32				EQU		-2932kAGErrNotFrontProcess			EQU		-2933kAGErrMacroResourceNotFound		EQU		-2934; -------------------- API reply codeskAGErrAppleGuideNotAvailable	EQU		-2951kAGErrCannotInitCoach			EQU		-2952kAGErrCannotInitContext			EQU		-2953kAGErrCannotOpenAliasFile		EQU		-2954kAGErrNoAliasResource			EQU		-2955kAGErrDatabaseNotAvailable		EQU		-2956kAGErrDatabaseNotOpen			EQU		-2957kAGErrMissingAppInfoHdl			EQU		-2958kAGErrMissingContextObject		EQU		-2959kAGErrInvalidRefNum				EQU		-2960kAGErrDatabaseOpen				EQU		-2961kAGErrInsufficientMemory		EQU		-2962; Events; Not an enum because we want to make assignments.; Handy events for AGGeneral.; Panel actions (Require a presentation window).kAGEventDoCoach					EQU		'doco'kAGEventDoHuh					EQU		'dhuh'kAGEventGoNext					EQU		'gonp'kAGEventGoPrev					EQU		'gopp'kAGEventHidePanel				EQU		'pahi'kAGEventReturnBack				EQU		'gobk'kAGEventShowPanel				EQU		'pash'kAGEventTogglePanel				EQU		'patg'; Functions; AGClose; Close the database associated with the AGRefNum.	IF GENERATING68K THEN		Macro		_AGClose			moveq	#17,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGClose	ENDIF; AGGeneral; Cause various events to happen.	IF GENERATING68K THEN		Macro		_AGGeneral			moveq	#13,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGGeneral	ENDIF; AGGetAvailableDBTypes; Return the database types available for this application.	IF GENERATING68K THEN		Macro		_AGGetAvailableDBTypes			moveq	#8,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGGetAvailableDBTypes	ENDIF; AGGetFrontWindowKind; Return the kind of the front window.	IF GENERATING68K THEN		Macro		_AGGetFrontWindowKind			moveq	#12,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGGetFrontWindowKind	ENDIF; AGGetFSSpec; Return the FSSpec for the AGRefNum.	IF GENERATING68K THEN		Macro		_AGGetFSSpec			moveq	#15,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGGetFSSpec	ENDIF; AGGetStatus; Return the status of Apple Guide.	IF GENERATING68K THEN		Macro		_AGGetStatus			moveq	#9,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGGetStatus	ENDIF; AGInstallCoachHandler; Install a Coach object location query handler.	IF GENERATING68K THEN		Macro		_AGInstallCoachHandler			moveq	#18,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGInstallCoachHandler	ENDIF; AGInstallContextHandler; Install a context check query handler.	IF GENERATING68K THEN		Macro		_AGInstallContextHandler			moveq	#19,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGInstallContextHandler	ENDIF; AGIsDatabaseOpen; Return true if the database associated with the AGRefNum is open.	IF GENERATING68K THEN		Macro		_AGIsDatabaseOpen			moveq	#6,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGIsDatabaseOpen	ENDIF; AGOpen; Open a guide database.	IF GENERATING68K THEN		Macro		_AGOpen			moveq	#1,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGOpen	ENDIF; AGOpenWithSearch; Open a guide database and preset a search string.	IF GENERATING68K THEN		Macro		_AGOpenWithSearch			moveq	#2,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGOpenWithSearch	ENDIF; AGOpenWithSequence; Open a guide database and display a presentation window sequence.	IF GENERATING68K THEN		Macro		_AGOpenWithSequence			moveq	#4,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGOpenWithSequence	ENDIF; AGOpenWithView; Open a guide database and override the default view.	IF GENERATING68K THEN		Macro		_AGOpenWithView			moveq	#5,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGOpenWithView	ENDIF; AGQuit; Make Apple Guide quit.	IF GENERATING68K THEN		Macro		_AGQuit			moveq	#16,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGQuit	ENDIF; AGRemoveCoachHandler; Remove the Coach object location query handler.	IF GENERATING68K THEN		Macro		_AGRemoveCoachHandler			moveq	#20,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGRemoveCoachHandler	ENDIF; AGRemoveContextHandler; Remove the context check query handler.	IF GENERATING68K THEN		Macro		_AGRemoveContextHandler			moveq	#21,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGRemoveContextHandler	ENDIF; AGStart; Start up Apple Guide in the background.	IF GENERATING68K THEN		Macro		_AGStart			moveq	#10,d0			dc.w 	$AA6E		EndM	ELSE		IMPORT	AGStart	ENDIF	ENDIF ; __APPLEGUIDE__