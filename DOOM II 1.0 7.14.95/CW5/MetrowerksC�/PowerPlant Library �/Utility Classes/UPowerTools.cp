								dBoxProc, (WindowPtr) -1, false, 0);		SetPort(windowP);		TextFont(0);		MoveTo(20, 22);		DrawString("\pInitial menu bar resource not found.");		MoveTo(20, 38);		DrawString("\pCheck that you have a properly named");		MoveTo(20, 54);		DrawString("\pproject resource file.");		MoveTo(50, 86);		DrawString("\p(Click the mouse to continue)");				while (!Button()) ;			ExitToShell();	}}